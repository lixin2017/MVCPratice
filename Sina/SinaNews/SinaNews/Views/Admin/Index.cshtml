@model PagedList.IPagedList<SinaNews.Models.News>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<h2>全部新闻</h2>

<p>
    @Html.ActionLink("创建新闻", "Create")
</p>
<table class="table">
    <tr>
        <th>
            标题
        </th>
        <th>
            作者
        </th>
        <th>
            时间
        </th>
        <th>
            地址
        </th>
      
        
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>     
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.time)
        </td>
        <td>
           <a href="@item.PageUrl" target="_blank">@item.PageUrl</a>
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.NewsId }) |
            @Html.ActionLink("详情", "Details", new { id=item.NewsId }) |
            @Html.ActionLink("删除", "Delete", new { id=item.NewsId })
        </td>
    </tr>
}

</table>
<p>每页 @Model.PageSize 条记录，共 @Model.PageCount 页，当前第 @Model.PageNumber 页></p>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
  
